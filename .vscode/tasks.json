{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Launch Server",
            "type": "shell",
            "command": "./debug_setup.sh", //lanza el programa en s√≠
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "maven",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(\\[ERROR\\]|\\[FATAL\\]) (.+):(\\d+):\\s+(.+)$",
                    "file": 2,
                    "line": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Launch Server",
            "type": "shell",
            "command": "screen -dmS imq sh -c imqbrokerd -tty; exec",
            "options": {
                "cwd": "${workspaceFolder}/lib/bin"
            },
            "problemMatcher": []
        }
    ]
}
    