{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Launch Server",
            "type": "shell",
            "command": "mvn compile", //lanza el programa en s√≠
            "options": {
                "cwd": "${workspaceFolder}/jmsproject",
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "maven",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(\\[ERROR\\]|\\[FATAL\\]) (.+):(\\d+):\\s+(.+)$",
                    "file": 2,
                    "line": 3,
                    "message": 4
                }
            }
        },
        {
            "label": "Launch Server",
            "type": "shell",
            "command": "./imqbrokerd -tty",
            "options": {
                "cwd": "${workspaceFolder}/lib/bin",
                "env": {
                    "IMQ_HOME": "${workspaceFolder}/lib/bin",
                }
            },
            "problemMatcher": []
        }
    ]
}
    